{
    "compileOnSave": true,
    "compilerOptions": {
      "allowJs": false,
      "allowUnreachableCode": false,
      "allowUnusedLabels": false,
      "alwaysStrict": true,
      "declaration": true,
      "declarationDir": "bin",
      "declarationMap": true,
      "downlevelIteration": true,
      "module": "es6",
      "noFallthroughCasesInSwitch": true,
      "noImplicitAny": true,
      "noImplicitReturns": true,
      "noImplicitThis": true,
      "noUnusedLocals": true,
      "noUnusedParameters": true,
      "outDir": "bin/es2018",
      "sourceMap": true,
      "strict": true,
      "stripInternal": true,
      "target": "es2018"
    },
    "include": ["src/**/*.ts"],
    "exclude": ["OLD"]
}